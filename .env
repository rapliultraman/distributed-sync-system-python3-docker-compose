# Distributed Sync System Configuration

# Node Configuration
NODE_ID=node1
PEERS=node1,node2,node3
HTTP_PORT=8000

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Docker Environment Flag
DOCKER_ENV=1

# Cache Configuration
CACHE_CAPACITY=100

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Heartbeat Configuration
HEARTBEAT_INTERVAL=1.0
HEARTBEAT_TIMEOUT=3.0

# Deadlock Detection
DEADLOCK_CHECK_INTERVAL=5.0

# Queue Configuration
QUEUE_PERSISTENCE=true
QUEUE_BACKUP_INTERVAL=60

# Security (Optional)
ENABLE_ENCRYPTION=false
CERT_PATH=/certs/
